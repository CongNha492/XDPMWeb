@model shopOnline.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Quản lý sản phẩm</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a>Quản lý sản phẩm</a></li>
                    <li class="breadcrumb-item active">Xóa sản phẩm</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3>Bạn có muốn xóa sản phẩm này không?</h3>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a class="btn btn-outline-success waves-effect waves-light" asp-action="Index">Không</a>
                    <input type="submit" value="Có" class="btn btn-outline-danger waves-effect waves-light" />
                </form>
                <table class="table">
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <td>Tên sản phẩm</td>
                            <td>@Model.ProductName</td>
                        </tr>
                        <tr>
                            <td>Loại</td>
                            <td>@Model.Category.CategoryName</td>
                        </tr>
                        <tr>
                            <td>Giá</td>
                            <td>@Model.ProductPrice</td>
                        </tr>
                        <tr>
                            <td>Ảnh</td>
                            <td>
                                <img height="200" src="~/images/products/@Model.Image" />
                            </td>
                        </tr>
                        <tr>
                            <td>Khối lượng</td>
                            <td>@Model.Weight</td>
                        </tr>
                        <tr>
                            <td>Mô tả</td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td>Thương hiệu</td>
                            <td>@Model.BrandName</td>
                        </tr>
                        <tr>
                            <td>Hiển thị</td>
                            @if (@Model.Published)
                            {
                                <td>bật</td>

                            }
                            else
                            {
                                <td>tắt</td>
                            }
                        </tr>
                    </tbody>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
