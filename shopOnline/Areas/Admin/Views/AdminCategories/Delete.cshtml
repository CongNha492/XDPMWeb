@model shopOnline.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Quản lý danh mục</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a>Quản lý danh mục</a></li>
                    <li class="breadcrumb-item active">Xóa danh mục</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3>Bạn có muốn xoá danh mục này không?</h3>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="CategoryId" />
                    <a class="btn btn-outline-success waves-effect waves-light" asp-action="Index">Không</a>
                    <input type="submit" value="Có" class="btn btn-outline-danger waves-effect waves-light" />
                </form>
                <table class="table">
                    <tbody>
                        <tr>
                            <td>ID</td>
                            <td>@Model.CategoryId</td>
                        </tr>
                        <tr>
                            <td>Tên danh mục</td>
                            <td>@Model.CategoryName</td>
                        </tr>
                        <tr>
                            <td>Hiển thị</td>
                            @if (@Model.Published)
                            {
                                <td>bật</td>

                            }
                            else
                            {
                                <td>tắt</td>
                            }
                        </tr>
                    </tbody>
                </table>

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>
