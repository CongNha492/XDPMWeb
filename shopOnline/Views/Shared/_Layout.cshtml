                            <li class="menu-item-has-children">
                                <a asp-controller="Home" asp-action="Contact">Liên hệ</a>
                            </li>
                            <li class="menu-item-has-children">
                                <a asp-controller="Home" asp-action="About">Giới thiệu</a>
                            </li>
                            <li class="menu-item-has-children">
                                <a asp-controller="Home" asp-action="order_lookup">Tra cứu đơn hàng</a>
                            </li>
                            <li class="menu-item-has-children">
                                <a target="_blank" asp-area="Admin" asp-controller="Home" asp-action="Index">Trang Admin</a>
                            </li>
